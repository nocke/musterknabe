# â†’ http://editorconfig.org/
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8

[*.yml]
indent_style = space
indent_size = 2

# match most webdev files
[*.{css,styl,sass,scss,js,html}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
