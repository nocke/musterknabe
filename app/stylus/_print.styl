/* ----------------------------------
 * Print - tweak print view
 *
 * hiding some, and showing others is
 * already the most essential thing to do
 * ---------------------------------- */

.printonly
	display: none !important;

@media print
	.printonly
		display: block !important;

	.neverprint
		display: none !important;


