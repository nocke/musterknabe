/* ----------------------------------
 * Font - font family defintions of custom fonts
 *
 * for anything >= IE9, woff2 is perfectly sufficient
 * (no need for ttf, svg) â†’ http://caniuse.com/#feat=woff
 * ---------------------------------- */


// ------------------------------------
// book (normal width)
// ------------------------------------

// regular (+italic), bold (+italic)
@font-face {
    font-family: 'ubuntu';
    src: url('font/ubuntu-r-webfont.woff2') format('woff2'),
         url('font/ubuntu-r-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'ubuntu';
    src: url('font/ubuntu-ri-webfont.woff2') format('woff2'),
         url('font/ubuntu-ri-webfont.woff') format('woff');
    font-weight: normal;
    font-style: italic;

}

@font-face {
    font-family: 'ubuntu';
    src: url('font/ubuntu-b-webfont.woff2') format('woff2'),
         url('font/ubuntu-b-webfont.woff') format('woff');
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: 'ubuntu';
    src: url('font/ubuntu-bi-webfont.woff2') format('woff2'),
         url('font/ubuntu-bi-webfont.woff') format('woff');
    font-weight: bold;
    font-style: italic;
}

// ------------------------------------
// condensed
// ------------------------------------

// regular (+italic)
// bold (+italic)


@font-face {
    font-family: 'ubuntu_condensed';
    src: url('font/ubuntu-c-webfont.woff2') format('woff2'),
         url('font/ubuntu-c-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;

}


